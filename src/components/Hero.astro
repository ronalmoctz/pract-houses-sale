---
import { Image } from "astro:assets";
import HauseHero from "../assets/house-1.jpg";
import ArrowUpRight from "../assets/arrow-up-right.svg";
---

<section id="hero" class="relative min-h-dvh w-full overflow-hidden">
  <Image
    src={HauseHero}
    alt="Casa Moon"
    class="absolute inset-0 w-full object-cover object-center block z-0"
  />
  <div class="container-default text-gray-100">
    <h1 class="absolute top-[8%] left-[8%] font-medium title">AMBER</h1>
    <h1 class="absolute top-[28%] right-[4.5%] font-medium title">HOUSE</h1>

    <p class="font-light text-3xl top-[14%] right-[6%] subtitle">
      WE BUILD <br /> MODERN <br /> HOUSES IN <br /> MEXICO
    </p>
    <p class="font-medium text-xl top-[50%] left-[40%] text-right subtitle">
      DESING <br /> PROJECT DESING <br /> CONSTRUCTION <br /> FINAL RENOVATION
    </p>
    <a
      class="absolute inline-flex items-center gap-2 text-2xl top-[58.3%] left-[8%]"
      href="#"
    >
      <span class="underline subtitle">GET A PRESENTATION</span>
      <ArrowUpRight />
    </a>
  </div>
</section>
