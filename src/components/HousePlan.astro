---
import { HOUSEAREA } from "../constants";
import PlayButton from "../assets/play-icon.svg";
---

<section class="py-30 container-default">
  <h1 class="font-neue-kaine text-8xl font-medium text-center">HOUSE PLAN</h1>

  <div class="mt-22">
    <h2 class="font-neue-kaine text-6xl font-medium text-left">
      THE AREA IS 141MÂ²
    </h2>
  </div>

  <div class="mt-16 grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
    <div class="order-1">
      {
        HOUSEAREA.map(({ areas }) => (
          <div class="grid grid-cols-1 gap-y-6 font-neue-kaine">
            {areas.map(({ name, size }) => (
              <div class="flex justify-between items-center py-4 px-6">
                <span class="text-2xl font-semibold">{name}</span>
                <span class="text-2xl font-semibold">{size}</span>
              </div>
            ))}
          </div>
        ))
      }
    </div>

    {/* Imagen del plano */}
    <div class="order-2">
      <img
        src="/images/main-floor-marketing.PNG"
        alt="plane-example"
        class="w-full h-auto rounded-3xl"
      />
    </div>
  </div>
  <div class="flex-center">
    <a
      href=""
      class="mt-12 flex items-center justify-center border-2 border-black w-[450px] px-8 py-6 rounded-xl"
    >
      <PlayButton class="size-8" />
      <span class="px-5 font-normal text-xl">VIEW ALL PROJECTS</span>
    </a>
  </div>
</section>
