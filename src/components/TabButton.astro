---
// src/components/TabButton.astro
interface Props {
  id: string;
  dataTab: string;
  isActive: boolean;
}

const { id, dataTab, isActive } = Astro.props;
---

<button
  id={id}
  data-tab={dataTab}
  type="button"
  role="tab"
  aria-selected={isActive}
  aria-controls={`${dataTab}-grid`}
  class={`
    px-12 lg:px-16 xl:px-20 py-4 md:py-5 lg:py-6 font-neue-kaine text-sm md:text-base lg:text-md font-bold transition-all duration-200 ease-in-out  
    ${
      isActive
        ? "bg-gray-900 text-white"
        : "bg-white text-gray-900 hover:bg-gray-50"
    }
    focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900
  `}
>
  <slot />
</button>