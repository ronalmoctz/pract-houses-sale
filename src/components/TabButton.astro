---
interface Props {
  id: string;
  dataTab: string;
  isActive: boolean;
}

const { id, dataTab, isActive } = Astro.props;
---

<button
  id={id}
  data-tab={dataTab}
  class={`
    px-20 py-6 font-neue-kaine text-md font-bold transition-all duration-200 ease-in-out  
    ${
      isActive
        ? "bg-gray-900 text-white"
        : "bg-white text-gray-900 hover:bg-gray-50"
    }
  `}
>
  <slot />
</button>
