---
import { TECNOLOGIES } from "../constants";
---

<section id="tecnologies" class="mt-30 flex-center">
  <div class="container-default">
    <!-- Hero de la sección -->
    <header class="relative grid place-items-center mb-16">
      <img
        src="/images/house-3.jpg"
        alt="Tecnologías de construcción modernas utilizadas en Amber House"
        class="object-cover w-full h-[300px] sm:h-[300px] rounded-4xl col-start-1 row-start-1"
        loading="lazy"
      />
      <h2
        class="text-gray-100 font-medium text-5xl sm:text-6xl md:text-7xl lg:text-8xl text-center z-10 col-start-1 row-start-1 px-4"
      >
        TECNOLOGIES
      </h2>
    </header>

    <!-- Grid de tecnologías -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 md:gap-6 lg:gap-8">
      {
        TECNOLOGIES.map(({ title, description, image }, index) => (
          <article class="relative flex flex-col items-start text-left px-6 py-8 md:px-4 lg:px-6">
            {index < TECNOLOGIES.length - 1 && (
              <div 
                class="absolute right-0 top-0 hidden h-full min-h-[1em] w-px self-stretch border-t-0 bg-gradient-to-tr from-transparent via-neutral-800 to-transparent opacity-35 dark:via-neutral-600 lg:block" 
                aria-hidden="true"
              />
            )}
            
            {/* Icono */}
            <div class="mb-6 flex justify-start">
              <image.logo class="size-14 sm:size-16" aria-hidden="true" />
            </div>
            
            {/* Título */}
            <h3 class="text-xl sm:text-2xl font-semibold mb-4 leading-tight">{title}</h3>
            
            {/* Descripción */}
            <p class="text-sm sm:text-base font-normal text-left leading-relaxed">
              {description}
            </p>
          </article>
        ))
      }
    </div>
  </div>
</section>